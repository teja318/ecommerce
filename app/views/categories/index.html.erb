
 <p id="notice"><%= notice %></p>

<h3>Listing Categories</h3>

<table class= "table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %> (<%= Product.where('category_id = ?', category.id).length %>)</td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'edit', edit_category_path(category[:id]) %>
            
            
        </td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
       
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
<%= link_to 'New Category', new_category_path %> 

<% end %>
