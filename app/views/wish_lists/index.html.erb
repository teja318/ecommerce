<h2> Listing Wishlist </h2>
<table border="1">
  <thead>
  <tr>
  <th> sl no </th>
  <th> Name </th>
  <th> Actions </th>
  <th> Save later </th>
  </tr>
  </thead>
  <tbody>
  	<% @wish_lists.each_with_index do |wish_list, index| %>
   <tr>
  	<td><%= index + 1 %></td>
	
	<td><%= wish_list.product.name %> </td>
	<td><%= link_to "remove", wish_list_path(wish_list.id), method: :delete %> </td>
  <td><%= form_for @cart_line_item do |f| %>
     <%= f.hidden_field :product_id, value: wish_list.product_id %>
     <%= f.hidden_field :quantity, value: "1" %>
    <%= f.submit "Add to Cart" %>
   <% end %>
   </td>
  </tr>
	<% end %>

 </tbody>
</table>